<%= link_to "<Back", root_path =%>
<% if current_user.present? && is_admin? %>
    <%= link_to "Add Movies", new_movie_path =%>
<% end %>
<h3>Movies (<%= @movies.count =%>)</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>  
            <th>Name</th>
            <th>Genre</th>
            <th>Format</th>
        </tr>
    </thead>
    <tbody>
        <% @movies.each do |movie| %>
            <tr>
                <td><%= movie.id =%></td>  
                <td><%= movie.name =%></td> 
                <td><%= movie.genre=%></td> 
                <td><%= movie.format=%></td> 
                <% if current_user.present? && is_admin? %>
                    <td>
                        <%= link_to "edit", edit_movie_path(movie) =%>
                    </td> 
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
