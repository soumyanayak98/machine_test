<%= link_to "<Back", root_path =%>
<% if current_user.present? && is_admin? %>
    <%= link_to "Add Show-Times", new_show_time_path =%>
<% end %>
<h3>ShowTimes(<%= @show_times.count =%>)</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>  
            <th>Theater Name</th>
            <th>Movie Name</th>
            <th>Date</th>
            <th>Timing</th>
            
        </tr>
    </thead>
    <tbody>
        <% @show_times.each do |st| %>
            <tr>
                <td><%= st.id =%></td>  
                <td><%= st.theater.name =%></td> 
                <td><%= st.movie.name =%></td> 
                <td><%= st.date =%></td>
                <td><%= st.timing =%></td>
                <% if current_user.present? && is_admin? %>
                    <td>
                        <%= link_to "edit", edit_show_time_path(st) =%>
                    </td> 
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
